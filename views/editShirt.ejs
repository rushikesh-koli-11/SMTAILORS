    <div class="container content">
        <h2 class="mt-5">Edit Shirt Measurements</h2>
        <form action="/editShirt/<%= customer._id %>" method="POST">
          
          
          
          <div class="mb-3">
                <label for="type" class="form-label"><i class="fa-solid fa-hand-point-right"></i> <b>प्रकार</b>(A- ओपन शर्ट किंवा B- भू शर्ट): </label>
                <input type="String" class="form-control" id="type" name="shirtMeasurements[type]" value="<%= customer.measurements.shirt.type %>" placeholder="A किंवा B">
            </div>

          <div class="mb-3">
                <label for="collar" class="form-label"><i class="fa-solid fa-hand-point-right"></i> <b>लांबी: </b></label>
                <input type="String" class="form-control" id="collar" name="shirtMeasurements[collar]" value="<%= customer.measurements.shirt.collar %>">
            </div>

            <div class="mb-3">
                <label for="chest" class="form-label"><i class="fa-solid fa-hand-point-right"></i> <b>छाती:</b></label>
                <input type="String" class="form-control" id="chest" name="shirtMeasurements[chest]" value="<%= customer.measurements.shirt.chest %>">
            </div>

            <div class="mb-3">
                <label for="waist" class="form-label"><i class="fa-solid fa-hand-point-right"></i> <b>पोट:</b></label>
                <input type="String" class="form-control" id="waist" name="shirtMeasurements[waist]" value="<%= customer.measurements.shirt.waist %>">
            </div>

            <div class="mb-3">
                <label for="seat" class="form-label"><i class="fa-solid fa-hand-point-right"></i> <b>सीट:</b></label>
                <input type="String" class="form-control" id="seat" name="shirtMeasurements[seat]" value="<%= customer.measurements.shirt.seat %>">
            </div>

            <div class="mb-3">
                <label for="frontWidth" class="form-label"><i class="fa-solid fa-hand-point-right"></i> <b>सोल्डर:</b></label>
                <input type="String" class="form-control" id="frontWidth" name="shirtMeasurements[frontWidth]" value="<%= customer.measurements.shirt.frontWidth %>">
            </div>

            <div class="mb-3">
                <label for="firstButton" class="form-label"><i class="fa-solid fa-hand-point-right"></i> <b>बाही लांबी:</b></label>
                <input type="String" class="form-control" id="firstButton" name="shirtMeasurements[firstButton]" value="<%= customer.measurements.shirt.firstButton %>">
            </div>

            <div class="mb-3">
                <label for="sleeveLength" class="form-label"><i class="fa-solid fa-hand-point-right"></i> <b>कॉलर:</b></label>
                <input type="String" class="form-control" id="sleeveLength" name="shirtMeasurements[sleeveLength]" value="<%= customer.measurements.shirt.sleeveLength %>">
            </div>

            <div class="mb-3">
                <label for="shortSleeveLength" class="form-label"><i class="fa-solid fa-hand-point-right"></i> <b>कप:</b></label>
                <input type="String" class="form-control" id="shortSleeveLength" name="shirtMeasurements[shortSleeveLength]" value="<%= customer.measurements.shirt.shortSleeveLength %>">
            </div>

            <!-- Add other shirt measurement fields here -->
            <button type="submit" class="btn btn-success ">Save Changes <i class="fa-regular fa-floppy-disk"></i></button>
        </form>
