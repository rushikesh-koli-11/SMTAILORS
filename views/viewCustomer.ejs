            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/addCustomer">New Customer</a>
            </li>
            </ul>
            <form class="d-flex" role="search" action="/searchCustomer" method="GET">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="name" required>
              <button class="btn btn-dark" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>

    <div class="container">
        <h2 class="mt-4 mb-3"><b><%= customer.name %></b>'s Measurements</h2>
        <hr>
        <p><b><i class="fa-solid fa-user"></i> Name: </b><%= customer.name %></p>
        <p><b><i class="fa-solid fa-phone"></i> Phone: </b><%= customer.phoneNumber %></p>
        <p><b><i class="fa-solid fa-location-dot"></i> Address: </b><%= customer.address %></p>
        <p><b><i class="fa-solid fa-calendar-days"></i> Deadline: </b> <span class="red"><%= customer.deadline.toDateString() %></span></p>
<hr>
        <% if (customer.measurements.shirt) { %>
            <h3 class="mt-3"><i class="fa-solid fa-shirt"></i> Shirt Measurements:</h3>
            <ul class="list-group shadow">
                <li class="list-group-item"><i class="fa-regular fa-hand-point-right"></i> प्रकार(A- ओपन शर्ट किंवा B- भू शर्ट): <%= customer.measurements.shirt.type %></li>
                <li class="list-group-item"><i class="fa-regular fa-hand-point-right"></i> लांबी: <%= customer.measurements.shirt.collar %></li>
                <li class="list-group-item"><i class="fa-regular fa-hand-point-right"></i> छाती: <%= customer.measurements.shirt.chest %></li>
                <li class="list-group-item"><i class="fa-regular fa-hand-point-right"></i> पोट: <%= customer.measurements.shirt.waist %></li>
                <li class="list-group-item"><i class="fa-regular fa-hand-point-right"></i> सीट: <%= customer.measurements.shirt.seat %></li>
                <li class="list-group-item"><i class="fa-regular fa-hand-point-right"></i> सोल्डर: <%= customer.measurements.shirt.frontWidth %></li>
                <li class="list-group-item"><i class="fa-regular fa-hand-point-right"></i> बाही लांबी: <%= customer.measurements.shirt.firstButton %></li>
                <li class="list-group-item"><i class="fa-regular fa-hand-point-right"></i> कॉलर: <%= customer.measurements.shirt.sleeveLength %></li>
                <li class="list-group-item"><i class="fa-regular fa-hand-point-right"></i> कप: <%= customer.measurements.shirt.shortSleeveLength %></li>
                <!-- Add other shirt measurement fields here -->
            </ul>
            <a href="/editShirt/<%= customer._id %>" class="btn btn-warning mt-3">Edit Shirt Measurements <i class="fa-solid fa-pen-to-square"></i></a>
        <% } else { %>
            <p class="mt-3">No Shirt's Measurements Available</p>
        <% } %>

        <% if (customer.measurements.pant) { %>
            <h3 class="mt-3"><i class="fa-solid fa-socks"></i> Pant Measurements:</h3>
            <ul class="list-group shadow">
                <li class="list-group-item"><i class="fa-regular fa-hand-point-right"></i> प्रकार(A- प्लेट किंवा B- नो प्लेट ): <%= customer.measurements.pant.type %></li>
                <li class="list-group-item"><i class="fa-regular fa-hand-point-right"></i> लांबी: <%= customer.measurements.pant.waistband %></li>
                <li class="list-group-item"><i class="fa-regular fa-hand-point-right"></i> कंबर: <%= customer.measurements.pant.seat %></li>
                <li class="list-group-item"><i class="fa-regular fa-hand-point-right"></i> सीट: <%= customer.measurements.pant.thigh %></li>
                <li class="list-group-item"><i class="fa-regular fa-hand-point-right"></i> किस्तक: <%= customer.measurements.pant.knee %></li>
                <li class="list-group-item"><i class="fa-regular fa-hand-point-right"></i> मांडी: <%= customer.measurements.pant.cuff %></li>
                <li class="list-group-item"><i class="fa-regular fa-hand-point-right"></i> गुडगा: <%= customer.measurements.pant.crotchFull %></li>
                <li class="list-group-item"><i class="fa-regular fa-hand-point-right"></i> बॉटम: <%= customer.measurements.pant.crotchFrontRise %></li>
                <!-- Add other pant measurement fields here -->
            </ul>
            <a href="/editPant/<%= customer._id %>" class="btn btn-warning mt-3">Edit Pant Measurements <i class="fa-solid fa-pen-to-square"></i></a>
        <% } else { %>
            <p class="mt-3">No Pant's Measurements Available</p>
        <% } %>

        <!-- Buttons -->
        <div class="mt-2">
            <a href="/" class="btn btn-dark">Back to Search <i class="fa-solid fa-magnifying-glass"></i></a>
            <a href="/downloadPDF/<%= customer._id %>" class="btn btn-success">Download PDF <i class="fa-regular fa-file-pdf"></i></a>
        </div>
    </div>

